    def cv_setup_plot(self):
        self.ax_cv.set_xlabel("Voltage",fontsize=14)
        self.ax_cv.set_ylabel("Current density",fontsize=14)
        self.canvas.draw()

    def cv_update_plot(self,cv_ircompen_df):
        self.cv_lines.remove() if self.cv_lines is not None else None
        for i in range(int(self.cv_ircompen_df.shape[1]/2)):
            self.cv_lines, = self.ax_cv.plot(self.cv_ircompen_df.iloc[:,i*2],self.cv_ircompen_df.iloc[:,(i*2)+1],linestyle="-",color="black",linewidth=0.8) 
        max_volt = []
        min_volt = []
        for column in self.cv_ircompen_df.columns:
            if column.endswith('volt'):
                max_volt.append(max(cv_ircompen_df[column]))
                min_volt.append(min(cv_ircompen_df[column]))
        print(min_volt,max_volt)
        self.ax_cv.set_xlim(min(min_volt),max(max_volt))
        self.canvas.draw()
        
